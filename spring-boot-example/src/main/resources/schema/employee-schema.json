{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "EmployeeList",
  "description": "A JSON array of company employees with detailed information.",
  "type": "array",
  "minItems": 1,
  "items": {
    "type": "object",
    "additionalProperties": false,
    "required": [
      "id",
      "fullName",
      "birthDate",
      "department",
      "title",
      "salary",
      "currency",
      "address",
      "contacts"
    ],
    "properties": {
      "id": {
        "type": "string",
        "pattern": "^[A-Z]{3}[0-9]{5}$",
        "description": "Unique employee identifier, e.g. HRM12345"
      },
      "fullName": {
        "type": "string",
        "minLength": 1
      },
      "birthDate": {
        "type": "string",
        "format": "date"
      },
      "department": {
        "type": "string",
        "enum": [
          "HR",
          "ENGINEERING",
          "SALES",
          "FINANCE",
          "MARKETING",
          "OPERATIONS",
          "LEGAL"
        ]
      },
      "title": {
        "type": "string"
      },
      "salary": {
        "type": "number",
        "minimum": 0
      },
      "currency": {
        "type": "string",
        "enum": ["USD", "EUR", "GBP", "JPY", "INR", "AUD", "CAD"]
      },
      "address": {
        "type": "object",
        "additionalProperties": false,
        "required": ["street", "city", "postalCode", "country"],
        "properties": {
          "street": {"type": "string"},
          "city": {"type": "string"},
          "state": {"type": "string"},
          "postalCode": {
            "type": "string",
            "pattern": "^[0-9A-Za-z\\- ]{3,10}$"
          },
          "country": {"type": "string", "minLength": 2}
        }
      },
      "contacts": {
        "type": "array",
        "minItems": 1,
        "items": {
          "type": "object",
          "additionalProperties": false,
          "required": ["type", "value"],
          "properties": {
            "type": {
              "type": "string",
              "enum": ["email", "phone"]
            },
            "value": {"type": "string"},
            "primary": {"type": "boolean", "default": false}
          }
        }
      },
      "emergencyContact": {
        "type": "object",
        "additionalProperties": false,
        "required": ["name", "phone"],
        "properties": {
          "name": {"type": "string"},
          "relationship": {"type": "string"},
          "phone": {"type": "string"}
        }
      },
      "startDate": {
        "type": "string",
        "format": "date"
      },
      "active": {
        "type": "boolean",
        "default": true
      }
    }
  }
}
