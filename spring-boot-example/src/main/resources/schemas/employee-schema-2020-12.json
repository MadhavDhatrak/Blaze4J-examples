{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "urn:example:employee-list:2020-12",
  "title": "Employee List",
  "type": "array",
  "minItems": 1,
  "items": { "$ref": "#/$defs/Employee" },
  "$defs": {
    "Employee": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "employeeId",
        "fullName",
        "email",
        "hireDate",
        "employmentType",
        "address",
        "salary"
      ],
      "properties": {
        "employeeId": { "type": "string", "format": "uuid" },
        "fullName": { "type": "string", "minLength": 3, "maxLength": 120 },
        "email": { "type": "string", "format": "email" },
        "birthDate": { "type": "string", "format": "date" },
        "hireDate": { "type": "string", "format": "date" },
        "employmentType": { "type": "string", "enum": ["FULL_TIME", "PART_TIME", "CONTRACTOR", "INTERN"] },
        "remote": { "type": "boolean", "default": false },
        "department": { "type": "string", "pattern": "^[A-Z]{2,6}$" },
        "skills": {
          "type": "array",
          "items": { "type": "string", "minLength": 1 },
          "uniqueItems": true,
          "maxItems": 32
        },
        "phoneNumbers": {
          "type": "array",
          "items": { "type": "string", "pattern": "^\\+?[0-9]{7,15}$" },
          "maxItems": 5
        },
        "managerId": { "type": "string", "format": "uuid" },
        "address": {
          "type": "object",
          "additionalProperties": false,
          "required": ["street", "city", "country"],
          "properties": {
            "street": { "type": "string", "minLength": 3 },
            "city": { "type": "string", "minLength": 2 },
            "state": { "type": "string", "minLength": 2, "maxLength": 60 },
            "country": { "type": "string", "minLength": 2, "maxLength": 2, "pattern": "^[A-Z]{2}$" },
            "postalCode": { "type": "string" }
          },
          "allOf": [
            {
              "if": { "properties": { "country": { "const": "US" } }, "required": ["country"] },
              "then": { "properties": { "postalCode": { "type": "string", "pattern": "^[0-9]{5}(-[0-9]{4})?$" } }, "required": ["postalCode"] }
            },
            {
              "if": { "properties": { "country": { "const": "CA" } }, "required": ["country"] },
              "then": { "properties": { "postalCode": { "type": "string", "pattern": "^[A-Z][0-9][A-Z] [0-9][A-Z][0-9]$" } }, "required": ["postalCode"] }
            }
          ]
        },
        "salary": {
          "type": "object",
          "additionalProperties": false,
          "required": ["amount", "currency"],
          "properties": {
            "amount": { "type": "number", "minimum": 0 },
            "currency": { "type": "string", "enum": ["USD", "EUR", "GBP", "CAD", "INR"] }
          }
        },
        "metadata": {
          "type": "object",
          "additionalProperties": false,
          "patternProperties": {
            "^x-[a-z0-9-]{1,32}$": { "type": ["string", "number", "boolean", "null"] }
          }
        }
      },
      "dependentRequired": {
        "managerId": ["department"]
      },
      "allOf": [
        {
          "if": { "properties": { "remote": { "const": true } }, "required": ["remote"] },
          "then": { "required": ["skills"] },
          "else": { "required": ["department"] }
        }
      ]
    }
  }
}


